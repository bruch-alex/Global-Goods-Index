<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.globalgoodsindex.controllers.MainController">

    <top>
        <fx:include fx:id="menuBarInclude" source="ui/menu-bar.fxml" />
    </top>

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <!--            <fx:include fx:id="iconThemeSwitcher" source="ui/themeSwitcher/icon-theme-switcher.fxml"/>-->
            <fx:include source="ui/bar-chart-view.fxml" />
         <Separator prefWidth="200.0" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="20.0" BorderPane.alignment="CENTER">
            <fx:include source="ui/country-list.fxml" />
            <fx:include source="ui/product-list.fxml" />
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </opaqueInsets>
</BorderPane>
