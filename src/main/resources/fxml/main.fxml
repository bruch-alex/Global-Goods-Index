<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="20.0" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <fx:include source="ui/country-list.fxml" />
         <fx:include source="ui/product-list.fxml" />
      </HBox>
   </bottom>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <Menu mnemonicParsing="false" text="BarChart Settings">
            <CheckMenuItem mnemonicParsing="false" text="Substract average rent" />
            <MenuItem mnemonicParsing="false" text="Something else" />
         </Menu>
         <Menu mnemonicParsing="false" text="View">
            <Menu mnemonicParsing="false" text="Theme">
               <MenuItem mnemonicParsing="false" text="Theme 1" />
               <MenuItem mnemonicParsing="false" text="Theme 2" />
            </Menu>
            <Menu mnemonicParsing="false" text="Language">
               <MenuItem mnemonicParsing="false" text="English" />
               <MenuItem mnemonicParsing="false" text="Deutsch" />
            </Menu>
            <CheckMenuItem mnemonicParsing="false" text="Hide Menu (ctrl + h)" />
         </Menu>
         <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
            <MenuItem mnemonicParsing="false" text="Github link" />
         </Menu>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <fx:include source="ui/theme-switcher.fxml" />
         <fx:include source="ui/bar-chart-view.fxml" />
      </VBox>
   </center>
</BorderPane>
